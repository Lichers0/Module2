<h1>Test list:</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Count questions</th>
    <th colspan="3">Action</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.id  %></td>
      <td><%= test.title %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to :show, test_path(test)  %></td>
      <td><%= link_to :edit, edit_test_path(test) %></td>
      <td><%= link_to :delete,
                       test_path(test),
                       method: :delete,
                       data: { confirm: "Are you sure?" }  %></td>
    </tr>
  <% end %>
</table>

<%=link_to 'New test', new_test_path %>