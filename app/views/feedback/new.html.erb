<h1><%= t("shared.header.feedback") %></h1>
<%= form_with model: @feedback, url: submit_feedback_index_path, local: true do |f| %>
  <div class="row form-group">
    <%=f.label :email, class: "col-sm-2 col-form-label" %>
    <%=f.text_field :email,
                    class: "form-control col col-lg-4" %>
  </div>
  <div class="row form-group">
    <%=f.label :title, class: "col-sm-2 col-form-label" %>
    <%=f.text_field :title, class: "form-control col col-lg-4" %>
  </div>
  <div class="row form-group">
    <%=f.label :body, class: "col-sm-2 col-form-label" %>
    <%=f.text_area :body,
                   class: "form-control col col-lg-4" %>
  </div>
  <div class="actions">
    <%= f.submit t(".send"), class: "btn btn-primary" %>
  </div>
<% end %>