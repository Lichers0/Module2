<%=form_with model: [:admin, @badge], local: true, class: "form-group" do |f| %>
  <%= render "shared/errors", resource: @badge %>
  <div class="row form-group">
    <%=f.label :title, class: "col-sm-2 col-form-label" %>
    <%=f.text_field :title, class: "form-control col col-lg-4" %>
  </div>
  <div class="row form-group">
    <%=f.label :picture, class: "col-sm-2 col-form-label" %>
    <%=f.text_field :picture, class: "form-control col col-lg-4" %>
  </div>
  <div class="row form-group">
    <%=f.label :rule, class: "col-sm-2 col-form-label" %>
    <%=f.select :rule,
                options_for_enum(@badge, :type_rule, :all_test_category),
                { class: "form-control col col-lg-4" } %>
  </div>
  <div class="row form-group">
    <%=f.label :rule_param, class: "col-sm-2 col-form-label" %>
    <%=f.text_field :rule_param, class: "form-control col col-lg-4" %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>