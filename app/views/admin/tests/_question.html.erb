<tr>
  <td><%= question.id  %></td>
  <td><%= question.body %></td>
  <td><%= link_to t("common.show"), question_path(question), class: "btn btn-outline-primary"  %></td>
  <td><%= link_to t("common.edit"), edit_question_path(question), class: "btn btn-outline-primary" %></td>
  <td><%= link_to t("common.delete"),
                  question_path(question),
                  method: :delete,
                  data: { confirm: t("common.r_u_sure") }, class: "btn btn-outline-primary" %></td>
</tr>