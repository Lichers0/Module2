<!--Local: true skip turbolinks-->

<%=form_with model: [:admin, @test], local: true, class: "form-group" do |f| %>
  <%= render "shared/errors", resource: @test %>
  <div class="row form-group">
    <%=f.label :title, class: "col-sm-2 col-form-label" %>
    <%=f.text_field :title, class: "form-control col col-lg-4" %>
  </div>
  <div class="row form-group">
    <%=f.label :level, class: "col-sm-2 col-form-label" %>
    <%=f.number_field :level, class: "form-control col col-lg-4" %>
  </div>
  <div class="row form-group">
    <%=f.label :timerleft , class: "col-sm-2 col-form-label" %>
    <%=f.number_field :timerleft , class: "form-control col col-lg-4" %>
  </div>
  <div class="row form-group">
    <%=f.label :category_id, class: "col-sm-2 col-form-label" %>
    <%=f.collection_select :category_id, Category.all, :id, :title,
                           { prompt: true },
                           { class: "form-control col col-lg-4" } %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>