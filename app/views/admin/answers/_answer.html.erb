<div class="row">
  <tr>
    <td>
      <%= answer.body %>
    </td>
    <td>
      <%= link_to t("common.show"), admin_answer_path(answer), class: "btn btn-outline-primary" %>
      <%= link_to t("common.edit"), edit_admin_answer_path(answer), class: "btn btn-outline-primary" %>
      <%= link_to t("common.delete"),
                  admin_answer_path(answer),
                  method: :delete,
                  data: { confirm: t("common.r_u_sure") }, class: "btn btn-outline-primary" %>
    </td>
  </tr>
</div>